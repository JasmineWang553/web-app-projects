        <h1>Edit Comment:</h1>
        <br>
        <form action="/comments/<%=comment.id%>/edit?_method=PATCH" method="post">
            <div class="form-group">
              <label for="username" class="font-weight-bold">Username: </label>
              <input type="text" readonly class="form-control col-sm-6" id="username" value= "<%=comment.username%>">
            </div>
            
            <div class="form-group">
              <label for="content" class = "font-weight-bold">Comment: </label>
              <textarea class="form-control col-sm-6" id="content" rows="5" name="comment"><%=comment.comment%></textarea>
            </div>
            <button class = "btn btn-primary" type="submit">Save</button>
            <form action="/comments" method = "get">
                <button class = "btn btn-primary" type="submit">Back to Comments</button>
            </form>
          </form>

    </div>
</body>

